+				if (0 == (ens & 0xFFFF)) // Namespace without frequency - Do not iterate
+				{
+					break;
+				}
+			}
+		}
+
+		if ((ens & 0xA0000000) == 0x80000000) // r749 ecms only (exclude r752+ ecms)
+		{
+			cs_log("Hey! Network buddy, you need to upgrade your OSCam-Emu");
