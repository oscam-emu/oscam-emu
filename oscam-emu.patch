+			case 0xE1: // EMM_TAG_EVENT_ENTITLEMENT_DESCRIPTOR (ecm keys)
+			{
+				uint8_t tagMode = data[pos + 2 + 4];
+
+				switch (tagMode)
+				{
+					case 0x00: // ecm keys from mode FF
