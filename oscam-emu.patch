+  if(!GetNagraKey(ideaKey, ident, '0', ideaKeyNr, 1)) return 2;    
+  if(GetNagraKey(vKey, ident, 'V', 0, 0)) { useVerifyKey = 1; }
+  if(!GetNagraKey(m1Key, ident, 'M', 1, 1)) return 2;    
