+  ideaKeyNr = (ecm[7]&0x10)>>4;
+  if(ideaKeyNr) ideaKeyNr = 1;
+  if(ident == 1283 || ident == 1285 || ident == 1297) ident = 1281;
+  if(cmdLen <= 63 || ecmLen < cmdLen + 10) return 1;
