+        i++; continue;
+    }
+  }
+  
+  if(l!=3) return 1;
+  if(mecmAlgo>0) return 1;
+   
+  identMask = ident & 0xFF00;
+  if (identMask == 0x1100 || identMask == 0x500 || identMask == 0x3100) {   
+    tmp1 = *(uint32_t*)dw;
+    tmp2 = *(uint32_t*)(dw + 4);
+    tmp3 = *(uint32_t*)(dw + 12);  
+    *(uint32_t*)dw = *(uint32_t*)(dw + 8);
+    *(uint32_t*)(dw + 4) = tmp3;
+    *(uint32_t*)(dw + 8) = tmp1;
+    *(uint32_t*)(dw + 12) = tmp2;
+  }
+  return 0;
