+						for (i = 0; i < 16; i++)
+						{
+							des(tagData + 2 + (i * 8), ks, 0);
+						}
+
+						blockIndex = tagData[1] & 0x03;
+
+						SAFE_MUTEX_LOCK(&emu_key_data_mutex);
+						for (i = 0; i < 16; i++)
+						{
+							SetKey('T', (blockIndex << 4) + i, "MK", tagData + 2 + (i * 8), 8, 0, NULL, NULL);
+						}
+						SAFE_MUTEX_UNLOCK(&emu_key_data_mutex);
+					}
