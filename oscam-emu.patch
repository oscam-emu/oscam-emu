+static void DrecryptPostCw(uint8_t* ccw)
+{
+	uint32_t i, j;
+	uint8_t tmp[4];
+
+	for(i = 0; i < 4; i++)
+	{
+		for(j = 0; j < 4; j++)
+		{
+			tmp[j] = ccw[3 - j];
+		}
+
+		for(j = 0; j < 4; j++)
+		{
+			ccw[j] = tmp[j];
+		}
+
+		ccw += 4;
+	}
+}
